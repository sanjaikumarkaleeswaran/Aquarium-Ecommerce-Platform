# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=AppName

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Email Configuration (SMTP)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your-email@ethereal.email
SMTP_PASS=your-password
FROM_NAME=Aquarium Commerce
FROM_EMAIL=noreply@aquariumcommerce.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Stripe Payment (Optional - for production)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# File Upload
MAX_FILE_SIZE=5242880

# AI Configuration
GROQ_API_KEY=your-groq-api-key-from-groq-cloud
